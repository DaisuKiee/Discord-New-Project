<!-- Dashboard Navigation -->
<nav class="dashboard-nav">
    <div class="nav-container">
        <!-- Mobile Sidebar Toggle -->
        <button class="mobile-menu-btn" onclick="toggleSidebar()" aria-label="Toggle sidebar">
            <i class="fas fa-bars"></i>
        </button>
        
        <!-- Brand -->
        <a href="/" class="nav-brand">
            <img id="nav-bot-avatar" src="/images/bot-avatar.svg" alt="Bot" style="width: 40px; height: 40px; border-radius: 50%;">
            <span id="nav-bot-name">Dashboard</span>
        </a>

        <!-- Nav Links -->
        <div class="nav-links">
            <a href="/" class="nav-link">Home</a>
            <a href="/commands" class="nav-link">Commands</a>
            <a href="/status" class="nav-link">Status</a>
            <a href="/dashboard" class="nav-link active">Dashboard</a>
        </div>

        <!-- User Info -->
        <div class="nav-user">
            <% if (typeof user !== 'undefined' && user) { %>
                <img src="<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
                     alt="<%= user.username %>" 
                     class="user-avatar">
                <span class="user-name"><%= user.username %></span>
                <a href="/auth/logout" class="btn btn-danger btn-sm">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            <% } else { %>
                <a href="/auth/login" class="btn btn-primary btn-sm">
                    <i class="fab fa-discord"></i> Login
                </a>
            <% } %>
        </div>
    </div>
</nav>

<!-- Sidebar Overlay for Mobile -->
<div class="sidebar-overlay" onclick="toggleSidebar()"></div>

<script>
function toggleSidebar() {
    document.querySelector('.sidebar')?.classList.toggle('open');
    document.querySelector('.sidebar-overlay')?.classList.toggle('active');
}
</script>
