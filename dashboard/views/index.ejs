        }
        .feature-slide:nth-child(1) { animation-delay: 0.7s; }
        .feature-slide:nth-child(2) { animation-delay: 0.8s; }
        .feature-slide:nth-child(3) { animation-delay: 0.9s; }
        @keyframes slideInRight {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
    </style>
